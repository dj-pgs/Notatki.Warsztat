@model Notatki.PWR.Models.AddNoteModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (@ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (@ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}
<h1>Dodaj notatkę</h1>
<form method="post">
    <div class="form-group">
        <label for="title">Tytuł:</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Podaj tytuł notatki" })
    </div>

    <div class="form-group">
        <label for="content">Podaj treść notatki:</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Zapisz</button>
</form>