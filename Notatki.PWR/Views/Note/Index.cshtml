@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodaj notatkę</h1>
<form>
    <div class="form-group">
        <label for="title">Tyuł:</label>
        <input type="text" class="form-control" id="title" placeholder="Podaj tytuł notatki">
    </div>
  
    <div class="form-group">
        <label for="content">Podaj treść notatki</label>
        <textarea id="content"></textarea>
        
    </div>
   
    <button type="submit" class="btn btn-default">Zapisz</button>
</form>