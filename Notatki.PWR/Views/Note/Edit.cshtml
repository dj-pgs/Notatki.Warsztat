@model Notatki.PWR.Controllers.EditViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj notatkę</h2>
<form method="post">
    <div class="form-group">
        <label for="title">Tytuł:</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Podaj tytuł notatki" })
    </div>

    <div class="form-group">
        <label for="content">Podaj treść notatki:</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m=>m.Id)
    <button type="submit" class="btn btn-default">Zapisz</button>
</form>